<div class="page-container">
    <h2>Available Flights</h2>

    {{#if tickets.length}}
        <ul class="tickets-list">
            {{#each tickets}}
                <li class="ticket-card">
                    <strong>{{from}}</strong> â†’ <strong>{{to}}</strong><br/>
                    Class: {{flightClass}} | Trip: {{tripType}}<br/>
