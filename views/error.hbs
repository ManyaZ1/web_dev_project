<!-- views/error.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Server Error</title>
    <link rel="stylesheet" href="/css/common.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            color: #333;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }
        h1 {
            font-size: 5rem;
            color: #f97316;
        }
        p {
            font-size: 1.2rem;
            margin: 20px 0;
        }
        pre {
            text-align: left;
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            max-width: 80%;
            overflow-x: auto;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        a {
            text-decoration: none;
            color: #fff;
            background-color: #f97316;
            padding: 10px 20px;
            border-radius: 8px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h1>500</h1>
    <p>Internal Server Error</p>
    {{#if error.stack}}
    <pre>{{error.stack}}</pre>
    {{/if}}
    <a href="/">Return to Home</a>
</body>
</html>
