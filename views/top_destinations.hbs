<link rel="stylesheet" href="/css/top_destinations.css" />

<div id="pageOverlay" class="page-overlay"></div>

<div class="page-container">
    <h2 class="animated-header">üåç Top Destinations</h2>

    <div class="chart-container">
        <canvas id="destinationsChart"></canvas>
    </div>

    <div class="destinations-grid">
        {{#each destinations}}
        <div class="destination-card">
            <div class="card-inner">
                <div class="card-front">
                    <div class="image-wrapper">
                        <img src="{{this.image}}" alt="{{this.name}}" />
                    </div>
                    <h3 class="destination-title">{{this.name}}</h3>
                    <p class="favorite-count">‚ù§Ô∏è {{this.favorites_count}} Favorites</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script id="stats-data" type="application/json"> {{{json statsData}}} </script>
<script src="/js/top_destinations.js" defer></script>
