<div id="globeViz" style="width: 100%; height: 600px;"></div>

<div class="floating-form-box">
    <form id="flightForm" method="POST" action="/search">
        <label>From:</label><br/>
        <select id="fromInput" name="fromInput" required>
            <option value="">Select</option>
            {{#each cities}}
                <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>

        <br/>

        <label>To:</label><br/>
        <select id="toInput" name="toInput" required>
            <option value="">Select</option>
            {{#each cities}}
                <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>

        <br/>

        <label>Class:</label><br/>
        <select name="class" required>
            <option>Economy</option>
            <option>Business</option>
            <option>First</option>
        </select>

        <br/>

        <label>Adults:</label><br/>
        <input type="number" name="adults" value="1" min="1" required/>

        <br/>

        <label>Children:</label><br/>
        <input type="number" name="children" value="0" min="0" required/>

        <br/>

        <label>Trip Type:</label><br/>
        <select name="tripType" required>
            <option value="oneway">One-way</option>
            <option value="roundtrip">Round-trip</option>
        </select>

        <br/>
        <button id="checkBtn" type="submit">Search</button>
    </form>
</div>

<!-- Load Libraries -->
<script src="https://unpkg.com/three"></script>
<script src="https://unpkg.com/globe.gl"></script>

<!-- Load Globe Logic -->
<script src="/js/globe.js"></script>
