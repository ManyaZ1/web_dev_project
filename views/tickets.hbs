<div class="tickets-container">
    <h2>Available Flights</h2>
    <div class="tickets-list">
        {{#each outboundFlights}}
        <div class="ticket-card" style="animation-delay: {{multiply @index 100}}ms;">
            <div class="ticket-header">
                <span class="airline">{{airline_name}}</span>
                <span class="class {{class}}">{{class}}</span>
            </div>
            <div class="ticket-body">
                <div class="cities">
                    <span class="city">{{departure_city}}</span>
                    <span class="arrow">âž”</span>
                    <span class="city">{{arrival_city}}</span>
                </div>
                <div class="times">
                    <span>{{time_departure}}</span>
                    <span>-</span>
                    <span>{{time_arrival}}</span>
                </div>
                <div class="price">
                    ${{price}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<script>
// Smooth scroll to tickets on load
window.addEventListener('DOMContentLoaded', () => {
    document.querySelector('.tickets-container').scrollIntoView({ behavior: 'smooth' });
});
</script>
